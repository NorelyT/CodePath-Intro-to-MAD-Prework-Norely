<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/backgroundView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wine"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="291dp"
        android:layout_height="107dp"
        android:text="Hello from Norely"
        android:textColor="@color/black"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.369" />

    <EditText
        android:id='@+id/textEditor'
        android:layout_width="275dp"
        android:layout_height="88dp"
        android:textColor="@color/black"
        android:textColorHighlight="@color/gray"
        android:textSize="25sp"
        android:maxLength="25"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </EditText>

    <Button
        android:id="@+id/textEditorButton"
        android:layout_width="218dp"
        android:layout_height="66dp"
        android:text="Put Custom Text"
        android:textSize="15sp"
        android:backgroundTint="@color/dark_green"
        app:layout_constraintBottom_toTopOf="@+id/changeTextColorButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/changeTextColorButton"
        android:layout_width="241dp"
        android:layout_height="71dp"
        android:text="Change Text Color"
        android:textSize="15sp"
        android:backgroundTint="@color/dark_green"
        app:layout_constraintBottom_toTopOf="@+id/changeBackgroundColorButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEditorButton" />

    <Button
        android:id="@+id/changeBackgroundColorButton"
        android:layout_width="289dp"
        android:layout_height="72dp"
        android:text="Change Background Color"
        android:textSize="15sp"
        android:backgroundTint="@color/dark_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeTextColorButton" />


</androidx.constraintlayout.widget.ConstraintLayout>